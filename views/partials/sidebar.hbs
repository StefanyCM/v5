<div class="col-lg-3 order-2 order-lg-1 mt-all-30">
    <div class="sidebar shop-sidebar">
        <div class="sidebar-categorie mb-30">
            <h3 class="sidebar-title">Categorias</h3>
            <div id="categories"></div>
            <ul class=" csidbar-style">
                {{#each categorias}}
                <li class="form-check">
                    <input class="form-check-input" id="{{id_categoria}}" type="checkbox">
                    <label class="form-check-label" for="{{id_categoria}}">{{nombre}}<label>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="sidebar-categorie mb-30">
        <h3 class="sidebar-title">Marcas</h3>
        <ul class=" csidbar-style">
            {{#each marcas}}
            <li class="form-check">
                <input class="form-check-input" value="#" id="{{id_marca}}" type="checkbox">
                <label class="form-check-label" for="{{id_marca}}">{{nombre}}<label>
            </li>
            {{/each}}
        </ul>
        <div id="brands"></div>
    </div>
</div>