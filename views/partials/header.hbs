  <script>

    var totalItems = 0;
    var total = 0;

    for (var i = 0; i <= localStorage.length - 1; i++) {
      var item = JSON.parse(localStorage.getItem(localStorage.key(i)));
      totalItems += item.cantidad;
      total += item.precio_venta;
    }

    var precio = 120.00;
    document.getElementById('total-pro').innerHTML = `${totalItems} item <br><span>$${total}</span>`;

    console.log(totalItems)


    function verCarrito() {
      $("#CategoryModal").modal("show");
      $('#CategoryModal').on('hidden.bs.modal', function () {
        document.getElementById("nombre_producto").innerText = "";
        document.getElementById("descripcion_producto").innerText = "";
        document.getElementById("precio").innerText = "";
        document.getElementById("cantidad").innerText = "";
        document.getElementById("subtotal").innerText = "";
        document.getElementById("total").innerText = "";
      });



      for (var i = 0; i <= localStorage.length - 1; i++) {
        var item = JSON.parse(localStorage.getItem(localStorage.key(i)));

        document.getElementById("nombre_producto").innerText = item.nombre;
        document.getElementById("precio").innerText = item.precio_venta;
        document.getElementById("cantidad").innerText = totalItems;
        document.getElementById("subtotal").innerText = (item.precio_venta * 0.15) + item.precio_venta;
        document.getElementById("total").innerText = ((item.precio_venta * 0.15) + item.precio_venta) * totalItems;


        document.getElementById("ptroduct-lis").append(`<p>${item.nombre}</p>`)


      }

    }

    function guardar() {

      var productos = [];
      for (var i = 0; i <= localStorage.length - 1; i++) {
        var item = JSON.parse(localStorage.getItem(localStorage.key(i)));
        productos.push(item);
      }

      fetch('/admin/pedidos', {
        method: 'POST',
        body: JSON.stringify(productos),
        headers: { 'Content-Type': 'application/json' }
      }).then(result => {
        //$('#CategoryModal').modal('hide');
        //location.reload();
      }).catch(err => {
        console.log(err);
      });
    }




